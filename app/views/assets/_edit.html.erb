<%= form_for asset, :html => { class: "edit-caption" } do |f| %>
  <div class="edit-image-container">
    <img class="edit-image" src="<%= asset.direct_upload_url %>">
  </div>
  <div class="edit-image-form hidden">
    <%= f.text_field :caption, placeholder: "What do you want to say about this photo?" %>
    <%= f.submit "Add caption" %>
  </div>
<% end %> 