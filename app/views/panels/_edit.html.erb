<div class="panel">
  <div class="panel-heading">
    <div class="panel-holder">
      <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= panel.id %>">Panel <%= index + 1 %></a>
    </div>
  </div>
  <div id="collapse<%= panel.id %>" class="panel-collapse collapse">
    <div class="droppable-panel">
    </div>
    <div class="dropdown">
      <span>Select a panel type:</span>
      <div class="dropdown-content">
        <p class="dropdown-option">Cover Screen: 1 image</p>
        <p class="dropdown-option">Full Screen: 1 image</p>
        <p class="dropdown-option">Split Screen: 2 images</p>
        <p class="dropdown-option">Masonry: Many images</p>
      </div>
    </div>
    <button class="panel-submit">Save Panel</button>
  </div>
</div>
