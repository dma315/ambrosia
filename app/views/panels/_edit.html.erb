<div class="panel" id="<%= panel.id %>">
  <div class="panel-heading">
    <div class="panel-holder">
      <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= panel.id %>">Panel <%= index + 1 %></a>
    </div>
  </div>
  <div id="collapse<%= panel.id %>" class="panel-collapse collapse">
    <div class="droppable-panel">
      <% panel.assets.each do |asset| %>
        <div class="draggable-image-box" id="<%= asset.id %>">
          <img class="draggable-image" src="<%= asset.direct_upload_url %>">
        </div>
      <% end %>
    </div>
    <div class="dropdown">
      <span class="option-selected">
        <%= panel_methods[panel.panel_type][0] %>
      </span>
      <div class="dropdown-content">
        <%= render partial: 'panels/all_methods' %>
        <% "Known bug, cannot submit if panel type is not re-selected" %>
      </div>
    </div>
    <button class="panel-submit">Save Panel</button>
  </div>
</div>
