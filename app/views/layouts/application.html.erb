<!DOCTYPE html>
<html>
<head>
  <title>Ambrosia</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div ng-app="myApp" ng-controller="NameOfController">
    <h1>{{"Hello world!"}}</h1>
    <h3>{{ statement }}</h3>
  </div>

  <script>
    var App = angular.module('myApp', ['ui.router', 'templates'])
  </script>

  <script>
    App.controller('NameOfController', [
      '$scope',
      function($scope) {
        $scope.statement = "Say something!!!"
      }])
  </script>

</body>
</html>
