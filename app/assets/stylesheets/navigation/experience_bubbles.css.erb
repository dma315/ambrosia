.experience-bubble {
  width: 90px;
  height: 90px;
  border-radius: 100%;
  margin: 0 auto;
  box-shadow: 0 0 5px white;
  transition: box-shadow .2s ease;
  opacity: 5;
}

.experience-bubble:hover {
  box-shadow: -2px -2px 4px #00FFFF, -2px 2px 4px #00FFFF, 2px -2px 4px #00FFFF, 2px 2px 4px #00FFFF;
}

nav {
  width: 120px;
  height: 100vh;
  overflow: auto;
  position: fixed;
  margin: 10px;
  background-color: transparent;
  overflow-x: hidden;
  overflow-y: auto;
  z-index: 1;
}

::-webkit-scrollbar {
    display: none;
}


