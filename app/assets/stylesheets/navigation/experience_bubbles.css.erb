.experience-bubble {
  width: 90px;
  height: 90px;
  border-radius: 100%;
  margin: 0 auto;
  box-shadow: 0 0 5px white;
  transition: box-shadow .2s ease;
  overflow: hidden;
}

.experience-bubble:hover {
  box-shadow: -2px -2px 4px #00FFFF, -2px 2px 4px #00FFFF, 2px -2px 4px #00FFFF, 2px 2px 4px #00FFFF;
}

.experience-bubble img {
  width: 100%;
  height: 100%;
}

nav {
  width: 120px;
  height: 100vh;
  top: 75px;
  overflow: auto;
  position: fixed;
  background-color: transparent;
  overflow-x: hidden;
  overflow-y: auto;
  z-index: 10;
}

#nav-overlay {
  background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5));
  height: 100vh;
  position: fixed;
  z-index: 1;
  width: 120px;
}

::-webkit-scrollbar {
    display: none;
}

.active-bubble {
  box-shadow: -2px -2px 4px #00FFFF, -2px 2px 4px #00FFFF, 2px -2px 4px #00FFFF, 2px 2px 4px #00FFFF;
}
