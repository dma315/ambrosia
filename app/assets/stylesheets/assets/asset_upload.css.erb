.progress {
  max-width: 535px;
  margin: 0 auto;
  background-color: lightgrey;
}

.progress .bar {
  height:  1.2em;
  padding-left: 0.2em;
  color:   white;
  display: none;
}

.file-upload {
  width: 535px;
  background-color: transparent;
  margin: 10px auto;
}

#asset-upload-title{
  font-size: 5em;
  margin-top: 20px;
  margin-bottom: 60px;
}

#asset-upload-box{
  font-family: sans-serif;
  color: white;
  margin: 0 auto;
  width: 800px;
  text-align: center;
  background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7));
  padding: 35px;
  border-radius: 4%;
}

#asset-upload-box a{
  color: white;
  text-decoration: none;
}
