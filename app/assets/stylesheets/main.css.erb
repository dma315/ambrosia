* {
  font-family: 'Asap', sans-serif;
}

body {
  height: 100%;
  background-color: black;
}

main {
  box-sizing: border-box;
  padding-left: 120px;
  height: 100%;
  width: 100%;
  position: fixed;
}

.background-images {
  background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url("<%= asset_path('stars.jpg') %>");
  background-size: cover;
  transition: background 1s linear;
}

a:hover {
  color: #00FFFF !important;
  opacity: 0.8;
  transition: 0.5s
}

#main-frame {
  height: 100vh;
  width: 100%;
  display: flex;
  align-content: center;
  align-items: center;
}

#session {
  display: none
}

.grid-sizer,
.grid-item {
  width: 30%;
  margin-bottom: 10px;
}


