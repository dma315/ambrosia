body {
  height: 100%;
  background-color: black;
}

main {
  height: 100%;
  width: 100%;
  position: fixed;
}

.background-images {
  background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url("<%= asset_path('elephants.jpg') %>");
  background-size: cover;
  transition: background 1s linear;
  position: fixed;
  display: flex;
  align-content: center;
  align-items: center;
}

a:hover {
  color: #00FFFF !important;
  opacity: 0.8;
  transition: 0.5s
}


