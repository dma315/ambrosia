body {
  height: 100%;
  background-color: black;
}

nav {
  width: 100px;
  height: 100vh;
  overflow: auto;
  position: fixed;
  background-color: blue;
  overflow-x: hidden;
  overflow-y: auto;
}

::-webkit-scrollbar {
    display: none;
}

main {
  height: 100%;
  width: 100%;
  background-image: url("northern-lights.jpg");
  background-size: fill;
  opacity: 0.5;
  margin-left: 100px;
  position: fixed;
}

.experience-bubble {
  width: 100%;
  height: 100px;
  border-radius: 100%;
}

.green {
  background-color: green;
}

.red {
  background-color: red;
}
