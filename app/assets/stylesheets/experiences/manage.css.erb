#manage-experience {
  width: 90%;
  height: 90vh;
  margin: 0 auto;
  font-family: sans-serif;
  color: white;
  margin: 0 auto;
  text-align: center;
  background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7));
  padding: 35px;
  border-radius: 4%;
  display: flex;
  align-content: center;
  align-items: center;
}

.manage-experience-half {
  width: 45%;
  height: 95%;
  margin: 0 auto;
  background-color: transparent;
  border-radius: 20px;
  border: 1px dotted white;
  padding: 5%;
}

.manage-experience-half h1 {
  width: 100%;
  text-align: center;
}

.draggable-images-container {
  margin: 0 auto;
  max-height: 90%;
  width: 90%;
  display: flex;
  flex-wrap: wrap;
  overflow-y: scroll;
}

.draggable-image-box {
  width: 30%;
  margin: 10px auto;
  border-radius: 20px;
  overflow: hidden;
}

.draggable-image {
  max-width: 100%;
  max-height: 100px;
}

// Overriding bootstrap CSS

.panel-group {
  width: 100%;
  margin: 0 auto;
  background-color: transparent;
}

.panel-collapse {
  min-height: 200px;
  border: 1px dotted white;
  border-radius: 20px;
}

.panel {
  background-color: transparent !important;
}

.panel-heading {
  background-color: transparent !important;
  padding: 10px 0px !important;
}

.panel-heading {
  border: 2px solid transparent;
  background: transparent;
  color: #ffffff;
  font-size: 16px;
  padding: 10px 0;
  border-radius: 3px;
  transition: .5s;
  margin-top: 20px;
  margin-bottom: 0px;
}

.panel-heading:hover {
  background-color: black;
  cursor: pointer;
  box-shadow: -2px -2px 4px #00FFFF, -2px 2px 4px #00FFFF, 2px -2px 4px #00FFFF, 2px 2px 4px #00FFFF;
  color: #00FFFF;
}

.panel-heading a {
  text-decoration: none;
  color: white;
  font-weight: bold;
}

.panel-holder {
  width: 90%;
  margin: 0 auto;
  overflow: hidden;
  height: 90%;
}
