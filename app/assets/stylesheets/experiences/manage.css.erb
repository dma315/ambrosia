#manage-experience {
  width: 90%;
  height: 90vh;
  margin: 0 auto;
  font-family: sans-serif;
  color: white;
  margin: 0 auto;
  text-align: center;
  background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7));
  padding: 35px;
  border-radius: 4%;
  display: flex;
  align-content: center;
  align-items: center;
}

.manage-experience-half {
  width: 45%;
  height: 95%;
  margin: 0 auto;
  background-color: transparent;
  border-radius: 20px;
  border: 1px dotted white;
  padding: 5%;
  overflow-y: scroll;
}

.manage-experience-half h1 {
  width: 100%;
  text-align: center;
}

.draggable-images-container {
  margin: 0 auto;
  max-height: 90%;
  width: 90%;
  display: flex;
  flex-wrap: wrap;
}

.draggable-image-box {
  max-width: 30%;
  margin: 10px auto;
  border-radius: 10%;
  overflow: hidden;
}

.draggable-image {
  max-width: 100%;
  max-height: 150px;
}

/* Overriding bootstrap */

.panel-group {
  width: 100%;
  margin: 0 auto;
  background-color: transparent;
}

.panel-collapse {
  min-height: 200px;
}

.panel {
  background-color: transparent !important;
}

.panel-heading {
  background-color: transparent !important;
  padding: 10px 10px !important;
}

.panel-heading, .panel-submit, #add-new-panel, .panel-remove {
  border: 2px solid transparent;
  background: transparent;
  color: #ffffff;
  font-size: 16px;
  padding: 10px 10px;
  border-radius: 3px;
  transition: .5s;
  margin-top: 20px;
  margin-bottom: 0px;
  margin-left: 10px;
  margin-right: 10px;
}

.panel-heading:hover, .panel-submit:hover, .panel-remove:hover, #add-new-panel:hover {
  background-color: black;
  cursor: pointer;
  box-shadow: -2px -2px 4px #00FFFF, -2px 2px 4px #00FFFF, 2px -2px 4px #00FFFF, 2px 2px 4px #00FFFF;
  color: #00FFFF;
}

.panel-heading a {
  text-decoration: none;
  color: white;
  font-weight: bold;
}

.panel-holder {
  width: 95%;
  margin: 0 auto;
  height: 90%;
}

.droppable-panel {
  display: flex;
  flex-wrap: wrap;
  min-height: 200px;
  width: 100%;
  border: 1px dotted white;
  border-radius: 20px;
}

/*Drop down menu*/
.dropdown {
    position: relative;
    display: block;
    padding: 10px;
}

.dropdown-content {
    display: none;
    position: absolute;
    background-color: black;
    color: white;
    width: 100%;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
    text-align: center;
}

.dropdown-option {
  padding: 10px;
}

.dropdown:hover .dropdown-content {
    display: block;
}

.dropdown-option:hover {
  background-color: black;
  cursor: pointer;
  box-shadow: -2px -2px 4px #00FFFF, -2px 2px 4px #00FFFF, 2px -2px 4px #00FFFF, 2px 2px 4px #00FFFF;
  color: #00FFFF;
}


