.grid-9-container {
  display: flex;
  flex-flow: row wrap;
}


.grid-9-item {
  width: 33%;
  /*font-family: 'Raleway', Arial, sans-serif;*/
  position: relative;
  float: left;
  overflow: hidden;
  /*margin: 10px 1%;*/
  margin: 0 !important;
  min-width: 230px;
  /*max-width: 315px;*/
  /*width: 100%;*/
  color: #ffffff;
  text-align: left;
  /*background-color: #ffffff;*/
  line-height: 1.4em;
  transform: translateZ(0);
}
.grid-9-item *,
.grid-9-item *:before {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-transition: all 0.35s ease-out;
  transition: all 0.35s ease-out;
}
.grid-9-item img {
  width: 100%;
  vertical-align: top;
  -webkit-transition: all 0.8s ease-out;
  transition: all 0.8s ease-out;
}
.grid-9-item:before {
  background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5));
  position: absolute;
  content: '';
  -webkit-transition: all 0.35s ease-out;
  transition: all 0.35s ease-out;
  -webkit-transition-delay: 0.2s;
  transition-delay: 0.2s;
  z-index: 1;
  bottom: 100%;
  top: 0;
  right: 0;
  left: 0;
  /*box-shadow: 0 0 40px white;*/
}
.grid-9-item figcaption {
  position: absolute;
  top: 0;
  height: 100%;
  left: 0;
  width: 100%;
  z-index: 2;
}
.grid-9-item h2,
.grid-9-item p {
  margin: 0;
  width: 100%;
  opacity: 0;
  padding: 25px;
}
.grid-9-item h2 {
  font-family: 'Julius Sans One', Arial, sans-serif;
}
.grid-9-item p {
  position: absolute;
  bottom: 0;
  padding-left: 60px;
  font-size: 1.5em;
  letter-spacing: 1px;
  text-align: right;
}
.grid-9-item a {
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  position: absolute;
  z-index: 2;
}
.grid-9-item:hover img,
.grid-9-item.hover img {
  opacity: 0.2;
}
.grid-9-item:hover:before,
.grid-9-item.hover:before {
  bottom: 0;
  box-shadow: 0 0 0px white;
  -webkit-transition-delay: 0s;
  transition-delay: 0s;
}
.grid-9-item:hover figcaption h2,
.grid-9-item.hover figcaption h2,
.grid-9-item:hover figcaption p,
.grid-9-item.hover figcaption p {
  -webkit-transition-delay: 0.25s;
  transition-delay: 0.25s;
}
.grid-9-item:hover figcaption h2,
.grid-9-item.hover figcaption h2 {
  -webkit-transform: translateY(0%);
  transform: translateY(0%);
  opacity: 0.5;
}
.grid-9-item:hover figcaption p,
.grid-9-item.hover figcaption p {
  opacity: 0.7;
}
